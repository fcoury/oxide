#!/bin/bash

set -euo pipefail

LAST_RELEASE=`gh release list | head -1 | awk '{print $1}'`
cargo build --release

cd target/release
zip "oxide_${LAST_RELEASE}_x86_64-unknown-linux-musl.zip" oxide
shasum -a 256 "oxide_${LAST_RELEASE}_x86_64-unknown-linux-musl.zip" > "oxide_${LAST_RELEASE}_x86_64-unknown-linux-musl.zip.sha256sum"

gh release upload "$LAST_RELEASE" "oxide_${LAST_RELEASE}_x86_64-unknown-linux-musl.zip"
gh release upload "$LAST_RELEASE" "oxide_${LAST_RELEASE}_x86_64-unknown-linux-musl.zip.sha256sum"
cd -

echo Done.
